<% layout('/layouts/boilerplate')%>
<body>
    <h3>All listings</h3>
    <!-- <form method="get" action="/listing/new">
        <button>create new listing</button>
    </form> -->
   
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(listing of allListing){%>
        <a href="/listing/<%=listing._id%>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%=listing.image%>" class="card-img-top" alt="listing_image" style="height: 20rem">
                <div class="card-img-overlay" ></div>
                <div class="card-body">
                  <h5 class="card-title"><b><%=listing.title%></b></h5>
                  <p class="card-price"><%=listing.price.toLocaleString("en-IN")%>&#8377; /night</p>
                </div>
              </div>
        </a>
          <%}%>
    </div>
